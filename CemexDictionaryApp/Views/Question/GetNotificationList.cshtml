@model List<CemexDictionaryApp.Models.CustomerQuestions>

<div class="page-wrapper">
    <div class="container-xl">
        <!-- Page title -->
        <div class="page-header d-print-none">
            <div class="row g-2 align-items-center">
                <div class="col">
                    <!-- Page pre-title -->
                    <div class="page-pretitle">
                        Overview
                    </div>
                    <h2 class="page-title">
                              @if ((string)TempData["listname"] == "Notification"){
                    <span> | Notifications :  @Model.Count()</span>
                }

                else{
                    <span> | Pending Questions :  @Model.Count()</span>
                }
                    </h2>
                </div>
                <!-- Page title actions -->
                <div class="col-12 col-md-auto ms-auto d-print-none">
                    <div class="btn-list">
                     
                      
                        <a href="#" class="btn btn-primary d-sm-none btn-icon" data-bs-toggle="modal" data-bs-target="#modal-report" aria-label="Create new report">
                            <!-- Download SVG icon from http://tabler-icons.io/i/plus -->
                            <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none" /><line x1="12" y1="5" x2="12" y2="19" /><line x1="5" y1="12" x2="19" y2="12" /></svg>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<br />

<div class="col-12">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">

                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-easel3" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M8.5 13.134V12h5a1.5 1.5 0 0 0 1.5-1.5V2h.5a.5.5 0 0 0 0-1H.5a.5.5 0 0 0 0 1H1v8.5A1.5 1.5 0 0 0 2.5 12h5v1.134a1 1 0 1 0 1 0ZM2 2v8.5a.5.5 0 0 0 .5.5h11a.5.5 0 0 0 .5-.5V2H2Z" />

                </svg> 
                @if ((string)TempData["listname"] == "Notification"){
                    <span> | Notifications @Model.Count()</span>
                }

                else{
                    <span> | Pending Questions @Model.Count()</span>
                }
                       
                    
               
            </h3>
        </div>
        @*                  <div class="card-body border-bottom py-3">
              <div class="d-flex">
                <div class="text-muted">
                  Show
                  <div class="mx-2 d-inline-block">
                    <input type="text" class="form-control form-control-sm" value="8" size="3" aria-label="Invoices count">
                  </div>
                  entries
                </div>
                <div class="ms-auto text-muted">
                  Search:
                  <div class="ms-2 d-inline-block">
                    <input type="text" class="form-control form-control-sm" aria-label="Search invoice">
                  </div>
                </div>
              </div>
            </div>*@

        <div class="card-header">
            <div class="table-responsive">
                <table class="table card-table table-vcenter text-nowrap datatable" id="TblInfo">
                    <thead>
                        <tr style="vertical-align:central; text-align:center">
                            <th style="vertical-align:central; text-align:center">Question No.</th>
                            <th style="vertical-align:central; text-align:center"> Customer Name </th>
                            <th style="vertical-align:central; text-align:center"> State</th>
                            <th style="vertical-align:central; text-align:center">Zone</th>
                            <th style="vertical-align:central; text-align:center">Category</th>
                            <th style="vertical-align:central; text-align:center">Occupation</th>
                            <th style="vertical-align:central; text-align:center">Date Time</th>
                            <th style="vertical-align:central; text-align:center">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (CustomerQuestions item in Model)
                        {
                        <tr style="vertical-align:central; text-align:center">
                            <td style="vertical-align:central; text-align:center"><span class="text-muted">@item.ID </span></td>
                            <td style="vertical-align:central; text-align:center"><a href="invoice.html" class="text-reset" tabindex="-1">@item.User.UserName</a></td>
                            <td style="vertical-align:central; text-align:center">
                                @item.User.State
                            </td>
                            <td style="vertical-align:central; text-align:center">
                                @item.User.Zone
                            </td>
                             <td style="vertical-align:central; text-align:center">
                                @item.User.Category
                            </td>
                                <td style="vertical-align:central; text-align:center">
                                    @item.User.Occupation
                                </td>

                            <td style="vertical-align:central; text-align:center">
                                @item.SubmitTime
                            </td>
                            <td style="vertical-align:central; text-align:center">
                                <span class="text-muted">
                                    <a href="/Question/AnswerQuestion?questionId=@item.ID" data-bs-boundary="viewport" class="btn-btn-primary">Answer</a>
                                </span>
                            </td>

                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>

@section Scripts {

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>



    <script type="text/javascript">
        $(document).ready(function () {
            $('#TblInfo').DataTable({
                "paging": true,
                columnDefs: [
                    {
                        targets: -1,
                        className: 'table-borderless'
                    }
                ]
            });

        });
    </script>
    }











