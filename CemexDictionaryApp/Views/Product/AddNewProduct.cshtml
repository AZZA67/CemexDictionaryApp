@{Layout = null;}
@model ProductViewModel
@{SelectList productTypes = new SelectList(ViewBag.ProductTypes, "Id", "Type");}



<form id="form1" asp-action="AddNewProduct" enctype="multipart/form-data" asp-controller="Product" >
  
            <div class="modal-body">
                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Name</label>
                    <input asp-for="Name" type="text" class="form-control" placeholder="Product Name" required>
                     <span asp-validation-for="@Model.Name" class="text-danger"></span> 
                </div>


                <div class="row">
                    <div class="col-sm-8">
                        <span class="form-label">Image</span>
                        <input class="form-control" asp-for="ProductImage" accept="image/*" required />
                         <span asp-validation-for="@Model.ProductImage" class="text-danger"></span> 
                    </div>
                    <div class="col-lg-4">
                        <div class="mb-3">
                            <label class="form-label">Product Type</label>
                            <select asp-for="ProductTypeId" asp-items="productTypes" class="form-select" required>
                                <option value="">Product Type</option>
                            </select>
                        </div>

                    </div>
            
        </div>

                <div class="row">
                    <div class="col-lg-12">
                        <div>
                            <label class="form-label">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="3" required></textarea>
                             <span asp-validation-for="@Model.Description" class="text-danger"></span> 
                        </div>
                    </div>
                </div>
                <br />
                <div class="modal-footer">
                    <a asp-action="GetAllProducts" asp-controller="Product" class="btn btn-link link-secondary ">Cancel</a>
                    <button  id="submitbtn" type="submit" class="btn btn-primary ms-auto">Create new Product</button>
                </div>
            </div>
</form>

@section scripts
{
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <script type="text/javascript"></script>
}

    