<div class="col-12">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-book" viewBox="0 0 16 16">
                          <path d="M1 2.828c.885-.37 2.154-.769 3.388-.893 1.33-.134 2.458.063 3.112.752v9.746c-.935-.53-2.12-.603-3.213-.493-1.18.12-2.37.461-3.287.811V2.828zm7.5-.141c.654-.689 1.782-.886 3.112-.752 1.234.124 2.503.523 3.388.893v9.923c-.918-.35-2.107-.692-3.287-.81-1.094-.111-2.278-.039-3.213.492V2.687zM8 1.783C7.015.936 5.587.81 4.287.94c-1.514.153-3.042.672-3.994 1.105A.5.5 0 0 0 0 2.5v11a.5.5 0 0 0 .707.455c.882-.4 2.303-.881 3.68-1.02 1.409-.142 2.59.087 3.223.877a.5.5 0 0 0 .78 0c.633-.79 1.814-1.019 3.222-.877 1.378.139 2.8.62 3.681 1.02A.5.5 0 0 0 16 13.5v-11a.5.5 0 0 0-.293-.455c-.952-.433-2.48-.952-3.994-1.105C10.413.809 8.985.936 8 1.783z"/>
                        </svg>
                |  News</h3>

        </div>
          <div class="card-header">
        <div class="table-responsive">

            <table id="TblInfo" class="table card-table table-vcenter text-nowrap table-borderless ">
                <thead>
           <tr style="vertical-align:central; text-align:center">

                         <th style="vertical-align:central; text-align:center"> News No.</th>
                         <th style="vertical-align:central; text-align:center"> Title </th>
                         <th style="vertical-align:central; text-align:center"> Image</th>
                        @*<th style="vertical-align:central; text-align:center">  Description</th>*@
                         <th style="vertical-align:central; text-align:center"> Status</th>
                       <th style="vertical-align:central; text-align:center">   Details</th>
                       <th style="vertical-align:central; text-align:center"> Change Status</th>
                    </tr>
                </thead>
                <tbody>


                    @foreach (News item in Model)

                    {
                          <tr style="vertical-align:central; text-align:center">

                           <td style="vertical-align:central; text-align:center"><span class="text-muted">@item.Id </span></td>
                            <td style="vertical-align:central; text-align:center"><a href="invoice.html" class="text-reset" tabindex="-1">@item.Title</a></td>
                            <td data-label="Name" style="vertical-align:central; text-align:center">
                              
                                    <Img class="avatar me-2" src="~/images/News/@item.Image"  style="vertical-align:central; text-align:center">
                        
                            </td>
                            @*<td style="vertical-align:central; text-align:center">
                                @item.Description
                            </td>*@

                            <td id="@item.Id"  style="vertical-align:central; text-align:center">

                                @if(item.Status=="Active")
                                    {
                                       <span class="badge bg-success me-1"></span> @item.Status
                                    }
                                    else
                                    {
                                       <span class="badge bg-danger me-1"></span> @item.Status
                                    }
                                 
                            </td>


                           <td style="vertical-align:central; text-align:center">
                                <span class="text-muted">
                                    <button onclick="modal(@item.Id)" class="btn align-text-top" id="details" data-id="@item.Id" data-bs-boundary="viewport">Details</button>

                                </span>
                            </td>
                           <td style="vertical-align:central; text-align:center">
                                <span class="text-end">
                                    <button onclick="toggle(@item.Id)" class="btn  align-text-top" data-bs-boundary="viewport">Toggle</button>

                                </span>
                            </td>
                        </tr>

                    }
                </tbody>
            </table>
        </div>
        </div>
    </div>
</div>







