
@{
    Layout = null;
}
@model NewsViewModel


<form id="form1" asp-action="AddNewNews" enctype="multipart/form-data" asp-controller="News" >
            <div class="modal-body">
                <div class="mb-3">
                    <label asp-for="Title" class="form-label">Title</label>
                    <input asp-for="Title" type="text" class="form-control" placeholder="News Title">
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <span class="form-label">Image</span>
                        <input class="form-control" asp-for="NewsImage" accept="image/*" />
                    </div>
                </div>

               
                    <div class="row">
                        <div class="col-lg-12">
                            <div>
                                <label class="form-label">Description</label>
                                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                            </div>
                        </div>
                    </div>
               
                <div class="modal-footer">

                    <a asp-action="GetAllNews" asp-controller="News" class="btn btn-link link-secondary ">Cancel</a>

                    <button id="submitbtn" type="submit" class="btn btn-primary ms-auto">Create new News</button>

                </div>

            </div>
      
 

</form>
